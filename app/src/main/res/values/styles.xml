<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"> <!--Theme.AppCompat.Light.NoActionBar-->
        <!--Here should go styles applicable for the whole app, for example modification of overflow button-->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SplashTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>
